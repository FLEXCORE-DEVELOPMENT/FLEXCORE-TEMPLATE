{
  "name": "flexcore-template",
  "version": "1.0.0",
  "description": "FlexCore Template Electron Desktop Application",
  "main": "src/main/main.js",
  
  "scripts": {
    "sass:build": "sass --source-map src/renderer/scss/main.scss src/renderer/css/styles.css",
    "sass:watch": "sass --watch --source-map src/renderer/scss/main.scss src/renderer/css/styles.css",
    "electron:dev": "electron . --dev",
    "start": "npm run sass:build && electron .",
    "dev": "npm run sass:build && npm-run-all --parallel sass:watch electron:dev",
    "build": "npm run sass:build && electron-builder",
    "pack": "npm run sass:build && electron-builder --dir",
    "dist": "npm run sass:build && electron-builder --publish=never"
  },

  "keywords": [
    "electron",
    "flexcore",
    "template"
  ],

  "author": "FlexCore Development",
  "license": "MIT",

  "devDependencies": {
    "electron": "^28.2.0",
    "electron-builder": "^24.13.3",
    "sass": "^1.70.0",
    "npm-run-all": "^4.1.5",
    "nodemon": "^3.0.3",
    "electron-reload": "^2.0.0-alpha.1"
  },

  "build": {
    "appId": "com.flexcore.template",
    "productName": "FlexCore Template",
    "directories": {
      "output": "dist"
    },

    "files": [
      "src/**/*",
      "node_modules/**/*"
    ],

    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],

      "icon": "assets/icon.ico",
      "publisherName": "FlexCore Development",
      "verifyUpdateCodeSignature": false,
      "requestedExecutionLevel": "asInvoker"
    },

    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "FlexCore Template"
    }
  }
}
